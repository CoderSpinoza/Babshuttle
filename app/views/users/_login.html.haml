= form_for(@user, :url => user_session_path, data: {remote: true}, html: { id: "new_session"}) do |f|
	.modal-header{style: "color: #2ac583;"}
		%a{class: "close", data: { dismiss: "modal"}}
			&times;
		%h3
			Login
	.modal-body
		.form-group
			= f.email_field :email, class: "form-control", placeholder: "Email"
		.form-group
			= f.password_field :password, class: "form-control", placeholder: "Password"
		.form-group
			#login_alert
	.modal-footer
		= link_to "Login with facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary"
		%button{ type: "submit", class: "btn btn-primary", id: "session_submit"}
			Login